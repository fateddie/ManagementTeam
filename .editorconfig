# ==============================================
# EditorConfig - Consistent coding styles
# ==============================================
# https://editorconfig.org
#
# Supported by VS Code, PyCharm, Sublime, Atom, and most modern editors
# Ensures consistent formatting across all team members

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files (preserve trailing whitespace for line breaks)
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.sh]
indent_size = 2

# Makefile (must use tabs)
[Makefile]
indent_style = tab

# Config files
[*.{toml,ini,cfg}]
indent_size = 2

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2

# HTML/CSS
[*.{html,css,scss}]
indent_size = 2
